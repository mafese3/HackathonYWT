---
const links = [
  { href: '/', label: 'Inicio' },
  { href: '/videos', label: 'Videos cortos' },
  { href: '/courses', label: 'Cursos' },
  { href: '/forum', label: 'Foro' },
  { href: '/events', label: 'Eventos' },
  { href: '/accessibility', label: 'Accesibilidad' }
]
---
<nav>
  <ul class="flex gap-4 items-center">
    {links.map(link => (
      <li><a class="text-gray-300 hover:text-purple-400" href={link.href}>{link.label}</a></li>
    ))}
  </ul>
</nav>