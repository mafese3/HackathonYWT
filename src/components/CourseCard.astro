---
// Props: title, description, youtubeId
const { title = 'Curso', description = '', youtubeId = '' } = Astro.props
---
<article class="theme-card rounded shadow p-4 flex gap-4">
  <div class="w-64 h-36 theme-block rounded overflow-hidden flex-shrink-0">
    {youtubeId ? (
      <iframe class="w-full h-full" src={`https://www.youtube.com/embed/${youtubeId}`} title={title} frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    ) : (
      <div class="w-full h-full flex items-center justify-center theme-text-secondary">Preview</div>
    )}
  </div>
  <div class="flex-1 py-2">
    <h3 class="font-semibold mb-2">{title}</h3>
    <p class="text-sm theme-text-secondary leading-relaxed mx-4">{description}</p>
  </div>
</article>